#ifndef TOK
#define TOK(t) 
#endif
#ifndef PUNCT
#define PUNCT(t, s) TOK(t)
#endif
#ifndef KEYWORD
#define KEYWORD(t) TOK(KW_ ## t)
#endif

#ifndef PPTOK
#define PPTOK(t) TOK(PP_ ## t)
#endif

TOK(Unknown)
TOK(Eof)

TOK(Identifier)
TOK(StringLiteral)
TOK(CharLiteral)
TOK(NumericLiteral)

PUNCT(LParen,       "(")
PUNCT(RParen,       ")")
PUNCT(LBrace,       "{")
PUNCT(RBrace,       "}")
PUNCT(LBracket,     "[")
PUNCT(RBracket,     "]")
PUNCT(Comma,        ",")
PUNCT(Semicolon,    ";")
PUNCT(Amp,          "&")
PUNCT(Assign,       "=")
PUNCT(Equals,       "==")
PUNCT(NotEquals,    "!=")
PUNCT(PlusPlus,     "++")
PUNCT(MinusMinus,   "--")
PUNCT(Plus,         "+")
PUNCT(Minus,        "-")
PUNCT(Star,         "*")
PUNCT(Div,          "/")
PUNCT(Pipe,         "|")
PUNCT(PlusAssign,   "+=")
PUNCT(MinusAssign,  "-=")
PUNCT(TimesAssign,  "*=")
PUNCT(DivAssign,    "/=")
PUNCT(Less,         "<")
PUNCT(Greater,      ">")
PUNCT(LessEqual,    "<=")
PUNCT(GreaterEqual, ">=")

KEYWORD(int)
KEYWORD(void)
KEYWORD(char)
KEYWORD(const)
KEYWORD(if)
KEYWORD(else)
KEYWORD(while)
KEYWORD(return)
KEYWORD(sizeof)

// Preprocessor
PPTOK(define)
PPTOK(undef)
