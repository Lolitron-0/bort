#ifndef TOK
#define TOK(t) 
#endif
#ifndef PUNCT
#define PUNCT(t, s) TOK(t)
#endif
#ifndef KEYWORD
#define KEYWORD(t) TOK(KW_ ## t)
#endif

TOK(Unknown)
TOK(Eof)

TOK(Identifier)
TOK(StringLiteral)
TOK(CharConstant)
TOK(NumericConstant)

PUNCT(LParen,       "(")
PUNCT(RParen,       ")")
PUNCT(LBrace,       "{")
PUNCT(RBrace,       "}")
PUNCT(LBracket,     "[")
PUNCT(RBracket,     "]")
PUNCT(Comma,        ",")
PUNCT(Dot,          ".")
PUNCT(Semicolon,    ";")
PUNCT(Colon,        ":")
PUNCT(Amp,          "&")
PUNCT(Assign,       "=")
PUNCT(Equals,       "==")
PUNCT(PlusPlus,     "++")
PUNCT(MinusMinus,   "--")
PUNCT(Plus,         "+")
PUNCT(Minus,        "-")
PUNCT(Star,         "*")
PUNCT(Div,          "/")
PUNCT(PlusAssign,   "+=")
PUNCT(MinusAssign,  "-=")
PUNCT(TimesAssign,  "*=")
PUNCT(DivAssign,    "/=")
PUNCT(Less,         "<")
PUNCT(Greater,      ">")

KEYWORD(int)
KEYWORD(char)

// Preprocessor
KEYWORD(define)
KEYWORD(undef)
