#ifndef TOK
#define TOK(t) 
#endif
#ifndef PUNCT
#define PUNCT(t, s) TOK(t)
#endif
#ifndef KEYWORD
#define KEYWORD(t) TOK(KW_ ## t)
#endif

#ifndef PPTOK
#define PPTOK(t) TOK(PP_ ## t)
#endif

TOK(Unknown)
TOK(Eof)

TOK(Identifier)
TOK(StringLiteral)
TOK(CharLiteral)
TOK(NumericLiteral)

PUNCT(LParen,       "(")
PUNCT(RParen,       ")")
